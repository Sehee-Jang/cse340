<div class="content-container">
  <h1><%= title %></h1>
  <form action="/register" method="post" class="register-form">
    <label for="account_firstname">First Name:</label>
    <input
      type="text"
      id="account_firstname"
      name="account_firstname"
      required
    />

    <label for="account_lastname">Last Name:</label>
    <input type="text" id="account_lastname" name="account_lastname" required />

    <label for="account_email">Email</label>
    <input type="email" name="account_email" id="account_email" required />

    <label for="account_password">Password</label>
    <input
      type="password"
      name="account_password"
      id="account_password"
      required
      required
      minlength="12"
    />

    <button type="button" onclick="togglePassword()">Show/Hide Password</button>

    <button type="submit">Register</button>
  </form>
  <p>
    Already have an account?
    <a href="/account/login" class="bold">Login here</a>
  </p>
</div>
