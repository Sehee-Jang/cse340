<h1>Hello, <%= user.account_firstname %></h1>

<% if (message) { %>
<div class="flash-message"><%= message %></div>
<% } %>

<!-- 계정 정보 업데이트 링크 (모든 사용자에게 표시) -->
<p>
  <a href="/account/update/<%= user.account_id %>">Update Account Information</a>
</p>

<% if (user.account_type === 'Employee' || user.account_type === 'Admin') { %>
<h3>Inventory Management</h3>
<p><a href="/inv">Access Inventory Management</a></p>
<% } %>
