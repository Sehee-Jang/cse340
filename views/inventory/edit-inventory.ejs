<h1>Update Inventory Item</h1>

<form action="/inv/update/" method="POST">
  <label for="classification_id">Classification</label>

  <%- classificationSelect %>

  <label for="inv_make">Make:</label>
  <input
    type="text"
    id="inv_make"
    name="inv_make"
    value="<%= inv_make || '' %>"
    required
  />

  <label for="inv_model">Model:</label>
  <input
    type="text"
    id="inv_model"
    name="inv_model"
    value="<%= inv_model || '' %>"
    required
  />

  <label for="inv_year">Year:</label>
  <input
    type="text"
    id="inv_year"
    name="inv_year"
    value="<%= inv_year || '' %>"
    required
  />

  <label for="inv_description">Description:</label>
  <textarea id="inv_description" name="inv_description" required>
<%= inv_description || '' %></textarea
  >

  <label for="inv_price">Price:</label>
  <input
    type="number"
    id="inv_price"
    name="inv_price"
    value="<%= inv_price || '' %>"
    required
  />

  <label for="inv_image">Image URL:</label>
  <input
    type="text"
    id="inv_image"
    name="inv_image"
    value="<%= inv_image || '' %>"
    required
  />

  <label for="inv_thumbnail">Thumbnail URL:</label>
  <input
    type="text"
    id="inv_thumbnail"
    name="inv_thumbnail"
    value="<%= inv_thumbnail || '' %>"
    required
  />

  <label for="inv_miles">Miles:</label>
  <input
    type="number"
    id="inv_miles"
    name="inv_miles"
    value="<%= inv_miles || '' %>"
    required
  />

  <label for="inv_color">Color:</label>
  <input
    type="text"
    id="inv_color"
    name="inv_color"
    value="<%= inv_color || '' %>"
    required
  />

  <div class="btn">
    <button type="submit" class="button">Update</button>
  </div>
  <input type="hidden" name="inv_id" value="<%= inv_id %>" />
</form>
<a href="/inv/">Back to Inventory Management</a>

<% if (message) { %>
<div class="flash-message"><%= message %></div>
<% } %>
