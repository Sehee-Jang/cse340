<h1>Update Inventory Item</h1>

<form action="/inv/update/<%= inv_id %>" method="POST">
  <label for="classification_id">Classification</label>

  <%- classificationSelect %>

  <label for="make">Make:</label>
  <input type="text" id="make" name="make" value="<%= inv_make %>" required />

  <label for="model">Model:</label>
  <input
    type="text"
    id="model"
    name="model"
    value="<%= inv_model %>"
    required
  />

  <label for="year">Year:</label>
  <input type="number" id="year" name="year" value="<%= inv_year %>" required />

  <label for="description">Description:</label>
  <textarea id="description" name="description">
<%= inv_description %></textarea
  >

  <label for="price">Price:</label>
  <input
    type="number"
    id="price"
    name="price"
    value="<%= inv_price %>"
    required
  />

  <label for="miles">Miles:</label>
  <input
    type="number"
    id="miles"
    name="miles"
    value="<%= inv_miles %>"
    required
  />

  <label for="color">Color:</label>
  <input
    type="text"
    id="color"
    name="color"
    value="<%= inv_color %>"
    required
  />

  <label for="image">Image:</label>
  <input type="file" id="image" name="image" />
  <img src="<%= inv_image %>" alt="Vehicle Image" width="100" />

  <div class="btn">
    <button type="submit" class="button">Update</button>
  </div>
</form>
<a href="/inv/">Back to Inventory Management</a>

<% if (message) { %>
<div class="flash-message"><%= message %></div>
<% } %>
